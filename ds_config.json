{
    "train_batch_size": 16,
    "train_micro_batch_size_per_gpu": 4,
    "gradient_accumulation_steps": 4,
    "fp16": {
        "enabled": true,
        "loss_scale": 0,
        "loss_scale_window": 1000,
        "min_loss_scale": 1,
        "hysteresis": 2
    },
    "optimizer": {
        "type": "AdamW",
        "params": {
            "lr": 3e-5,
            "betas": [0.9, 0.999],
            "eps": 1e-6,
            "weight_decay": 0.01
        }
    },
    "scheduler": {
        "type": "WarmupDecayLR",
        "params": {
            "warmup_min_lr": 0,
            "warmup_max_lr": 3e-5,
            "warmup_num_steps": 500,
            "total_num_steps": 9000
        }
    },
    "zero_optimization": {
        "stage": 2,
        "allgather_partitions": true,
        "reduce_scatter": true,
        "allgather_bucket_size": 200000000,
        "overlap_comm": true,
        "reduce_bucket_size": 200000000,
        "contiguous_gradients": true
    },
    "pipeline": {
        "type": "simple",
        "pipe_parallel_degree": 2,
        "schedule": "1F1B"
    },
    "wall_clock_breakdown": false
}
